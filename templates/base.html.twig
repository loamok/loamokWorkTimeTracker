<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script>
            </script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

{% set route_name = app.request.attributes.get('_route') %}
{% set path_attributes = app.request.attributes %}
{% set home_routes = ['app_homepage', 'app_home'] %}
{% set worktime_routes = ['worktime_tracker', 'worktime_tracker_create', 'worktime_tracker_display', ] %}

    <body>
        <div class="turbo-progress-bar "></div>
        <header>
            {% include 'top_bar/_top.html.twig' %}
            {% block topbar_work %}{% endblock %}
            {% if route_name is not same as "user_badge" %}
                {% include 'top_bar/_bottom.html.twig' %}
            {% endif %}
        </header>
        <header>
            <nav class="navbar navbar-expand-md navbar-light bg-light-blue mb-3">
                <div class="container-fluid">
                    <a href="#" class="navbar-brand mr-3">Menu : </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav">
                            <ul class="nav">
                                {% block menu_links %}{% endblock %}
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container-fluid">
            <div class="row">
                {% include '_alerts_zone.html.twig' %}
            </div>
            <div class="row">
                {% include '_working_buttons_bar.html.twig' %}
            </div>
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
