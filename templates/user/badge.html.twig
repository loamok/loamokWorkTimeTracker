{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <turbo-frame id="personal_badge" >
        <ul class="nav">
        {% if is_granted('ROLE_USER') %}
            <li class="nav-item">
                <a data-turbo-frame="_top" href="{{ path('app_logout') }}" class="nav-link {% if route_name == 'app_logout' %}active{% endif %}">Log out</a>
            </li>
        {% else %}
            <li class="nav-item">
                <a data-turbo-frame="_top" href="#" class="nav-link">Register</a>
            </li>
            <li class="nav-item">
                <a data-turbo-frame="_top" href="{{ path('app_login') }}" class="nav-link {% if route_name == 'app_login' %}active{% endif %}">Log in</a>
            </li>
            <li class="nav-item">
                <a data-turbo-frame="_top" href="{{ path('app_forgot_password_request') }}" class="nav-link {% if route_name == 'app_forgot_password_request' %}active{% endif %}">Forgoted my pass</a>
            </li>
        {% endif %}
        </ul>
    </turbo-frame>
{% endblock %}
